module e2_top #() (
    clk: input  clock   ,
    led: output logic<5>,
) {
    const WAIT_TIME    : logic<24> = 13_500_000;
    var led_counter  : logic<6> ;
    var clock_counter: logic<24>;

    always_ff (clk) {
        clock_counter = clock_counter + 1;
        if (clock_counter == WAIT_TIME) {
            clock_counter = 0;
            led_counter   = led_counter + 1;
        }
    }

    assign led = led_counter[4:0];
}
